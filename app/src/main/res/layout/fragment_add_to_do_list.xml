<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.AddToDoListFragment">


    <EditText
        android:layout_below="@+id/linearLayout"
        android:id="@+id/toDoTitleText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="24sp"
        android:inputType="textMultiLine"
        android:layout_margin="3dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:maxLines="2"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textColorHint="#656667"
        android:background="@drawable/edittext_bg_black"
        android:hint="Title">

    </EditText>

    <EditText
        android:id="@+id/toDoContentText"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_below="@id/toDoTitleText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:paddingLeft="20dp"
        android:maxLines="10"
        android:gravity="top"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:hint="Content"
        android:maxLength="150"
        android:textColor="@color/black"
        android:background="@drawable/edittext_bg_black"
        android:inputType="textMultiLine"
        android:textColorHint="#656667"
        android:textSize="24sp">

    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_bg_black"
            android:textSize="20sp"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:text="Add to do">

        </Button>

        <ImageView
            android:id="@+id/colorsImageView"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"

            android:background="@drawable/ic_baseline_color_lens_24"
            >

        </ImageView>
    </LinearLayout>

</RelativeLayout>